<strong><%= Comment.model_name.human %>:</strong>
<% if commentable.comments.present? %>
  <% commentable.comments.order(:id).includes(:user).each do |comment| %>
    <li>
      <%= comment.content %> :
      <small>
        <%= link_to comment.user.name_or_email, comment.user %>
        (<%= l comment.created_at, format: :short %>)
      </small>
      <%= link_to t('views.common.edit'), polymorphic_url([:edit, commentable, comment]) %>
      <% if commentable == @book %>
        <%= link_to t('views.common.destroy'),book_comment_path(comment), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      <% else %>
        <%= link_to t('views.common.destroy'),report_comment_path(comment), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      <% end %>
    </li>
  <% end %>
<% else %>
<p><%= Comment.human_attribute_name(:message_no_inclusion) %></p>
<% end %>
